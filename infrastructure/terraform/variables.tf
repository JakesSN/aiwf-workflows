variable \"project_id\" {\n  type        = string\n  description = \"Google Cloud Project ID\"\n}\n\nvariable \"region\" {\n  type        = string\n  description = \"Google Cloud region\"\n  default     = \"us-central1\"\n\n  validation {\n    condition     = contains([\"us-central1\", \"us-east1\", \"us-west1\", \"europe-west1\"], var.region)\n    error_message = \"Region must be a free tier eligible region.\"\n  }\n}\n\nvariable \"instance_name\" {\n  type        = string\n  description = \"Name of the compute instance\"\n  default     = \"sustainbot-instance-1\"\n}\n\nvariable \"machine_type\" {\n  type        = string\n  description = \"GCP machine type\"\n  default     = \"f1-micro\"\n\n  validation {\n    condition     = contains([\"f1-micro\", \"e2-micro\", \"e2-small\"], var.machine_type)\n    error_message = \"Machine type must be free tier eligible.\"\n  }\n}\n